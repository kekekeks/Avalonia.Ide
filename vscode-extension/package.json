{
    "name": "avalonia",
    "displayName": "avalonia",
    "description": "",
    "version": "0.0.1",
    "publisher": "kekekeks",
    "engines": {
        "vscode": "^1.30.1",
        "node": "^8.9.3"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/kekekeks/Avalonia.Ide.git"
    },
    "bugs": {
        "url": "https://github.com/kekekeks/Avalonia.Ide/issues"
    },
    "activationEvents": [
        "onLanguage:xml",
        "onLanguage:xaml"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "xaml",
                "extensions": [
                    ".xaml"
                ],
                "aliases": [
                    "XAML"
                ]
            }
        ]
    },
    "scripts": {
        "prepublish": "tsc -p ./src",
        "compile": "tsc -p ./src",
        "tslint": "tslint ./src/**/*.ts",
        "watch": "tsc -w -p ./src",
        "test": "mocha -u tdd ./out/tests/; node_modules/.bin/mocha --require jsdoctest out/extension.js",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "package": "vsce package",
        "publish": "vsce publish",
        "release": "standard-version"
    },
    "devDependencies": {
        "typescript": "^3.2.2",
        "vscode": "^1.1.26",
        "tslint": "^5.12.0",
        "@types/node": "^10.12.18",
        "@types/mocha": "^5.2.5",
        "standard-version": "8.0.1",
        "vsce": "1.54.0",
        "jsdoctest": "1.7.1"
    },
    "dependencies": {
        "vscode-languageclient": "5.2.1",
        "child-process": "1.0.2"
    }
}
