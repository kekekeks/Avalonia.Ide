{
    "name": "avalonia",
    "displayName": "Avalonia",
    "description": "",
    "version": "0.0.1",
    "publisher": "kekekeks",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/kekekeks/Avalonia.Ide.git"
    },
    "bugs": {
        "url": "https://github.com/kekekeks/Avalonia.Ide/issues"
    },
    "activationEvents": [
        "onLanguage:xaml",
        "onCustomEditor:avalonia.xamlPreviewer"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "xaml",
                "extensions": [
                    ".xaml",
                    ".axaml"
                ],
                "aliases": [
                    "XAML"
                ]
            }
        ],
        "customEditors": [
            {
                "viewType": "avalonia.xamlPreviewer",
                "displayName": "Xaml Previewer",
                "selector": [
                    {
                        "filenamePattern": "*.axaml"
                    },
                    {
                        "filenamePattern": "*.xaml"
                    }
                ],
                "priority": "option"
            }
        ]
    },
    "scripts": {
        "test": "mocha -u tdd ./out/tests/; node_modules/.bin/mocha --require jsdoctest out/extension.js",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -w -p ./"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.27",
        "@types/uuid": "^8.3.0",
        "@types/vscode": "^1.52.0",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "eslint": "^7.6.0",
        "glob": "^7.1.6",
        "mocha": "^8.0.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "bson": "^4.2.2",
        "child-process": "^1.0.2",
        "get-port": "^5.1.1",
        "jsdoctest": "^1.7.1",
        "promise-socket": "^7.0.0",
        "rxjs": "^6.6.3",
        "uuid": "^8.3.2",
        "vscode-languageclient": "^5.2.1"
    }
}
